body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
	background-color:#8041bb;

}



#site-logo {
  
    height: 150px;
	width:700px;
	position:absolute; text-align:center;
	   
}


#upperbackground{text-align:center;
}


#sidepanel{position:absolute; position:fixed; left:0px ; background-color: white; margin-top: 0px;  padding:20px; 
height:100%;

}
#sidepanel img {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
#sidepanel a:hover img {
    transform: scale(1.08);
    box-shadow: 0 0 10px purple;
}
#notice-board {
    display: flex;
    flex-wrap: wrap;
    gap: 5px; /* Adds 5px gap between news items */
    padding: 10px;
    background-color: transparent; /* Replace with your background image path */
    background-size: cover;
    background-position: center;
	position:absolute; 
	top:30%;
	width: 1800px;
	left:7%;
	 border-radius: 25px;

}

.news-item {
    flex: 1 0 calc(12.5% - 10px); /* 8 items per row with 5px gap */
    margin: 10px;
    background-color: #a28923;
    border: 0px solid #ddd;
    box-shadow: 0 0px 2px rgba(0, 0, 0, 0.1);
	border-radius: 5px;
	 padding: 4px;

}

.news-item img {
    width: 100%;
    height: auto;
    display: block;
	border-radius: 5px;
	padding:0px
}

.news-item p {
	font-family: Comic Sans MS;
	font-size: 20px;
	color: white;
	text-decoration: none;
    padding: 4px;
    text-align: left;
    background-color: #a28923; /* Yellow background for the text */
}
a:link { 
  text-decoration: none; 
} 
a:visited { 
  text-decoration: none; 
} 
a:hover { 
  text-decoration: none; 
} 
a:active { 
  text-decoration: none; 
}


